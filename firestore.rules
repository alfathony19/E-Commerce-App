rules_version = '2';
service cloud.firestore {
  function isSignedIn() {
    return request.auth != null;
  }

  function isAdmin() {
    return isSignedIn() &&
      (request.auth.token.admin == true || request.auth.token.role == 'admin');
  }

  match /databases/{database}/documents {

    // ✅ PUBLIC bisa lihat produk
    match /products/{productId} {
      allow read: if true;              // semua orang bisa lihat produk
      allow create, update, delete: if isAdmin(); // hanya admin bisa nulis
    }

    // ✅ PUBLIC bisa lihat review
    match /reviews/{reviewId} {
      allow read: if true;               // semua bisa lihat
      allow create: if isSignedIn();     // user login bisa bikin review
      allow update, delete: if isAdmin() || request.auth.uid == resource.data.userId;
    }

    // 👤 USERS
    match /users/{userId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin() || request.auth.uid == userId;
    }

    // 🛒 CARTS (keranjang per user)
    match /carts/{cartId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin()
        || request.auth.uid == resource.data.owner
        || request.auth.uid == resource.data.userId;
    }

    // 📦 ORDERS
    match /orders/{orderId} {
      allow create: if isSignedIn(); // user bisa bikin order
      allow read, update, delete: if isAdmin()
        || (isSignedIn() && (
            resource.data.owner == request.auth.uid ||
            resource.data.userId == request.auth.uid
        ));
    }

    // 🎟️ PROMOS
    match /Promos/{promoId} {
      allow read: if true;       // publik bisa lihat promo
      allow write: if isAdmin(); // cuma admin bisa edit
    }

    // 👑 ADMIN-ONLY
    match /admins/{docId} {
      allow read, write: if isAdmin();
    }
    match /adminLogs/{docId} {
      allow read, write: if isAdmin();
    }
    match /reports/{docId} {
      allow read, write: if isAdmin();
    }
    match /settings/{docId} {
      allow read, write: if isAdmin();
    }
    match /orderHistory/{docId} {
      allow read, write: if isAdmin();
    }

    // fallback biar aman
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
