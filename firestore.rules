rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”“ Public boleh baca semua kategori produk (ATK, Banner, dst.)
    match /{collection}/{docId} {
      allow read: if
        collection in ['ATK', 'Banner', 'Brosur-Flyer', 'Copy-and-Print', 'Name-Card-Id', 'Packaging', 'Photos', 'Promos', 'Sticker-Logo', 'Undangan'];
      allow write: if false; // biar public ga bisa nulis
    }

    // reviews
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // orders
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (
        request.auth.token.admin == true ||
        resource.data.owner == request.auth.uid ||
        resource.data.userId == request.auth.uid
      );
    }

    // carts
    match /carts/{cartId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.uid == resource.data.owner ||
        request.auth.uid == resource.data.userId
      );
    }

    // admin collections
    match /{adminColl}/{docId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
