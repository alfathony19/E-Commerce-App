rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”“ Public bisa baca semua kategori produk
    match /{collection}/{docId} {
      allow read: if
        collection in [
          'ATK', 'Banner', 'Brosur-Flyer', 'Copy-and-Print',
          'Name-Card-Id', 'Packaging', 'Photos',
          'Promos', 'Sticker-Logo', 'Undangan'
        ];
      allow write: if false; // public ga boleh nulis
    }

    // ðŸ”“ Reviews
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null; // user login bisa bikin review
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // ðŸ”’ Orders (hanya owner & admin)
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null &&
        (
          request.auth.token.admin == true ||
          resource.data.owner == request.auth.uid ||
          resource.data.userId == request.auth.uid
        );
    }

    // ðŸ”’ Carts
    match /carts/{cartId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null &&
        (
          request.auth.token.admin == true ||
          request.auth.uid == resource.data.owner ||
          request.auth.uid == resource.data.userId
        );
    }

    // ðŸ”’ Admin only collections
    match /{adminColl}/{docId} {
      allow read, write: if request.auth != null &&
        request.auth.token.admin == true;
    }
  }
}
