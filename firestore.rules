rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // === Products (Public bisa read) ===
    match /{collectionName}/{docId} {
      allow read: if collectionName in [
        "ATK", "Banner", "Brosur-Flyer", "Copy-and-Print",
        "Name-Card-Id", "Packaging", "Photos", "Promos",
        "Sticker-Logo", "Undangan"
      ];
      allow write: if false; // public & users ga boleh nulis produk
    }

    // === Users (profile) ===
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // === Reviews ===
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // === Orders ===
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null &&
        (
          request.auth.token.admin == true ||
          resource.data.owner == request.auth.uid ||
          resource.data.userId == request.auth.uid
        );
    }

    // === Carts ===
    match /carts/{cartId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null &&
        (
          request.auth.token.admin == true ||
          request.auth.uid == resource.data.owner ||
          request.auth.uid == resource.data.userId
        );
    }

    // === Admin only ===
    match /admins/{docId} {
      allow read, write: if request.auth != null &&
        request.auth.token.admin == true;
    }
  }
}
