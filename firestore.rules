rules_version = '2';
service cloud.firestore {
  function isSignedIn() {
    return request.auth != null;
  }

  function isAdmin() {
    return isSignedIn() &&
      (request.auth.token.admin == true || request.auth.token.role == 'admin');
  }

  match /databases/{database}/documents {

    // 🔓 Produk (publik bisa lihat)
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // 🔓 Reviews (publik bisa lihat)
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn(); 
      allow update, delete: if isAdmin() || request.auth.uid == resource.data.userId;
    }

    // 🧑 User profile
    match /users/{userId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin() || request.auth.uid == userId;
    }

    // 🛒 Orders
    match /orders/{orderId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin()
        || (isSignedIn() && (
            (resource.data.owner != null && resource.data.owner == request.auth.uid) ||
            (resource.data.userId != null && resource.data.userId == request.auth.uid)
        ));
    }

    // 🛍️ Carts
    match /carts/{cartId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin()
        || (isSignedIn() && (
            (resource.data.owner != null && resource.data.owner == request.auth.uid) ||
            (resource.data.userId != null && resource.data.userId == request.auth.uid)
        ));
    }

    // 🎟️ Promos
    match /promos/{promoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 👑 Admin-only
    match /admins/{docId} {
      allow read, write: if isAdmin();
    }
    match /adminLogs/{docId} {
      allow read, write: if isAdmin();
    }
    match /reports/{docId} {
      allow read, write: if isAdmin();
    }
    match /settings/{docId} {
      allow read, write: if isAdmin();
    }
    match /orderHistory/{docId} {
      allow read, write: if isAdmin();
    }

    // ✅ Koleksi publik lain (misal categories, banners, dll)
    match /categories/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /banners/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Fallback → deny semua yg nggak ke-define
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
