rules_version = '2';
service cloud.firestore {
  function isSignedIn() {
    return request.auth != null;
  }

  function isAdmin() {
    return isSignedIn() &&
      (request.auth.token.admin == true || request.auth.token.role == 'admin');
  }

  match /databases/{database}/documents {

    // ğŸ”“ Public bisa lihat semua produk
    match /products/{productId} {
      allow read: if true;         // semua orang boleh baca product
      allow create, update, delete: if isAdmin();
    }

    // ğŸ”“ Public bisa lihat semua reviews
    match /reviews/{reviewId} {
      allow read: if true;         // semua orang bisa baca review
      allow create: if isSignedIn(); // user login bisa bikin review
      allow update, delete: if isAdmin() || request.auth.uid == resource.data.userId;
    }

    // ğŸ§‘ User profile
    match /users/{userId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin() || request.auth.uid == userId;
    }

    // ğŸ›’ Orders
    match /orders/{orderId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin()
        || (isSignedIn() && (
            resource.data.owner == request.auth.uid ||
            resource.data.userId == request.auth.uid
        ));
    }

    // ğŸ›ï¸ Carts
    match /carts/{cartId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin()
        || request.auth.uid == resource.data.owner
        || request.auth.uid == resource.data.userId;
    }

    // ğŸŸï¸ Promos
    match /Promos/{promoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ğŸ‘‘ Admin-only collections
    match /admins/{docId} {
      allow read, write: if isAdmin();
    }
    match /adminLogs/{docId} {
      allow read, write: if isAdmin();
    }
    match /reports/{docId} {
      allow read, write: if isAdmin();
    }
    match /settings/{docId} {
      allow read, write: if isAdmin();
    }
    match /orderHistory/{docId} {
      allow read, write: if isAdmin();
    }

    // Fallback
    match /{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
