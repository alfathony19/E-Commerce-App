rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // === Public bisa baca produk ===
    match /ATK/{docId} { allow read: if true; allow write: if false; }
    match /Banner/{docId} { allow read: if true; allow write: if false; }
    match /Brosur-Flyer/{docId} { allow read: if true; allow write: if false; }
    match /Copy-and-Print/{docId} { allow read: if true; allow write: if false; }
    match /Name-Card-Id/{docId} { allow read: if true; allow write: if false; }
    match /Packaging/{docId} { allow read: if true; allow write: if false; }
    match /Photos/{docId} { allow read: if true; allow write: if false; }
    match /Promos/{docId} { allow read: if true; allow write: if false; }
    match /Sticker-Logo/{docId} { allow read: if true; allow write: if false; }
    match /Undangan/{docId} { allow read: if true; allow write: if false; }

    // === Users (profile) ===
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // === Reviews ===
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // === Orders ===
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null &&
        (
          request.auth.token.admin == true ||
          resource.data.owner == request.auth.uid ||
          resource.data.userId == request.auth.uid
        );
    }

    // === Carts ===
    match /carts/{cartId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null &&
        (
          request.auth.token.admin == true ||
          request.auth.uid == resource.data.owner ||
          request.auth.uid == resource.data.userId
        );
    }

    // === Admin only ===
    match /admins/{docId} {
      allow read, write: if request.auth != null &&
        request.auth.token.admin == true;
    }
  }
}
